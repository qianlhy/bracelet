<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.diy.mapper.CategoryMapper">

    <update id="update" parameterType="com.diy.entity.Category">
        update category
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="pageQuery" resultType="com.diy.entity.Category">
        select * from category
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
        </where>
        order by sort desc, create_time desc
    </select>
    
    <select id="list" resultType="com.diy.entity.Category">
        select * from category
        where status = 1
        order by sort desc, create_time desc
    </select>
    
    <select id="listByNameAndId" resultType="com.diy.entity.Category">
        select * from category
        where name = #{category.name}
        <if test="id != null">
            and id != #{id}
        </if>
    </select>

</mapper>